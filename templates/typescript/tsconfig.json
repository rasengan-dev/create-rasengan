{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2020",

    /* Bundler mode */
    "moduleResolution": "bundler",
    "module": "ESNext",
    "jsx": "react-jsx",

    /* Aliases for intellisence */
    "paths": {
      "@/*": ["src/*"],
      "@app/*": ["src/app/*"],
      "@components/*": ["src/components/*"],
      "@assets/*": ["src/assets/*"],
      "@styles/*": ["src/styles/*"]
    }
  },
  "include": ["src", "rasengan-env.d.ts"],

  "extends": "./node_modules/rasengan/tsconfig.base.json"
}
